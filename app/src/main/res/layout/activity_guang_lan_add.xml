<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="光缆名称" />

            <EditText
                android:id="@+id/cabel_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="50dp"
                android:hint="请输入光缆名称(必填)"
                android:textColorHint="#95A1AA"
                android:textSize="14sp"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="地区" />


            <TextView
                android:gravity="center_vertical"
                android:id="@+id/area_id"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:textColor="@color/color333333"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:singleLine="true"
                android:hint="请选择所属地区"
                tools:text="" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="安装地址" />

            <EditText
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="50dp"
                android:hint="请输入安装地址(必填)"
                android:textColorHint="#95A1AA"
                android:textSize="14sp"
                tools:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="光缆编码" />

            <EditText
                android:id="@+id/cabel_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="请输入光缆编码(必填)"
                android:textColorHint="#95A1AA"
                android:textSize="14sp"
                android:layout_weight="1"
                android:singleLine="true"
                tools:text="" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="容量" />

            <EditText
                android:id="@+id/capaticy"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="请输入纤芯数(必填)"
                android:textColorHint="#95A1AA"
                android:textSize="14sp"
                android:layout_weight="1"
                android:singleLine="true"
                tools:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="长度" />

            <EditText
                android:id="@+id/op_long"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:hint="请输入光缆段长度(必填)"
                android:textColorHint="#95A1AA"
                android:textSize="14sp"
                android:layout_weight="1"
                android:singleLine="true"
                tools:text="" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="级别" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/grade_id"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:textColor="@color/color333333"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:singleLine="true"
                android:hint="请选择级别"
                tools:text="" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="备注" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:hint="请输入备注信息"
                android:textSize="14sp"
                tools:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="状态" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                tools:textColor="@color/color333333"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:singleLine="true"
                android:hint="请选择纤芯状态"
                tools:text="" />


        </LinearLayout>

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@color/color1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#fff"
            android:text="新增光缆段" />

    </LinearLayout>

</ScrollView>